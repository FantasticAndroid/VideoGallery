<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_video_gallery_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">

    <TextView
        android:id="@+id/tv_video_slug_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="0.9sp"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_14ssp"
        tools:text="Thi is my Slug/Title Slug/Title Slug/Title Slug/Title Slug/Title Slug/Title" />

    <RelativeLayout
        android:id="@+id/rl_read_more_share_btns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_view_desc_more_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:button="@null"
            android:drawableEnd="@drawable/ic_arrow_down"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:text="@string/label_view_more"
            android:textColor="@color/colorPrimary"
            tools:text="@string/label_aur_paden" />

        <ImageView
            android:id="@+id/layoutIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:src="@android:drawable/ic_menu_agenda" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_video_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="0.9sp"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/_13ssp"
        android:visibility="gone"
        tools:text="Description"
        tools:visibility="visible" />


</LinearLayout>